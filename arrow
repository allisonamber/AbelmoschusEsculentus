<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Map with Arrow Example</title>
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <style>
        #map { height: 400px; }
    </style>
</head>
<body>
    <div id="map"></div>

    <script>
        var map = L.map('map').setView([38.8895, -97.5391], 4);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
        }).addTo(map);

        // Define coordinates for the arrow line
        var arrowCoordinates = [
            [38.8895, -97.5391],
            [38.8895 + 0.1, -97.5391 + 0.1] // Example offset
        ];

        // Create a polyline with arrow markers
        L.polyline(arrowCoordinates, { color: 'red' }).addTo(map).setText('â†“', { repeat: true, offset: 10 });

        // Add a marker at the end of the arrow
        L.marker([38.8895 + 0.1, -97.5391 + 0.1]).addTo(map)
            .bindPopup('End of the arrow')
            .openPopup();
    </script>
</body>
</html>
